pipeline {

agent {
        dockerfile {
            // indicar que el archivo est√° dentro de la carpeta 'devops'
            dir 'devops' 
        }
    }    stages {
       stage('Test') {
            
            steps {
                sh 'pytest -q'
            }
        }
         stage('Lint') {
           
            steps {
                sh 'pip install -r requirements.txt flake8 mypy'
                sh 'make lint'
            }
        }
    }
}
